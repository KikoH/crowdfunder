<h1><%= @user.email %></h1>
<h2>Projects Backed</h2>
<% if Pledge.where(backer_id: current_user.id) %>
  <% Pledge.where(backer_id: current_user.id).each do |pledge| %>
  <p><%= link_to pledge.project.name, project_path(pledge.project) %></p>
<% end %>
<% end %>

<h2>Spent to date:</h2>
<%= Pledge.where(backer_id: current_user.id).sum(:contribution) %>